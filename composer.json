{
    "name": "govcms/govcms-project",
    "description": "Built for the new digital government",
    "keywords": ["govCMS"],
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "conflict": {
        "drupal/core": "7.*"
    },
    "config": {
        "secure-http": false
    },
    "suggest": {
        "hirak/prestissimo": "^0.3"
    },
    "require": {
        "composer/installers": "^1.2.0",
        "cweagans/composer-patches": "^1.6.0",
        "wikimedia/composer-merge-plugin": "^1.4.0",
        "acquia/blt": "^8.7.0-beta1",
        "govcms/config": "8.3.x-dev",
        "govcms/govcms": "8.3.x-dev"
    },
    "extra": {
        "blt": {
            "update": true
        },
        "branch-alias": {
            "dev-master": "8.3.x-dev"
        },
        "composer-exit-on-patch-failure": true,
        "merge-plugin": {
            "require": [
                "vendor/acquia/blt/composer.required.json",
                "vendor/govcms/config/composer.required.json",
                "vendor/govcms/config/composer.suggested.json"
            ],
            "include": [],
            "recurse": true,
            "merge-dev": true,
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": true
        },
        "enable-patching": true,
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        }
    }
}
